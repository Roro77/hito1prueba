<% @tweets.each do |tweet| %>
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <%= image_tag(tweet.user.profile_picture, width: "50%")  %>
    </div>
        <div class="col-md-8">
            <div class="card-body">
        
            <p class="card-text"><%= tweet.content %></p>
            <p class="card-text"><small class="text-muted">Like</small></p>
            <p class="card-text"><small class="text-muted">Retweets</small></p>
            </div>
        </div>
    </div>
</div>
<% end %>